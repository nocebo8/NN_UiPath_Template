    <ui:InvokeCode DisplayName="Initialize CSV Report File" sap:VirtualizedContainerService.HintSize="334,112" sap2010:WorkflowViewState.IdRef="InvokeCode_1">
      <ui:InvokeCode.Code>
        <![CDATA[
// Generate report path with timestamp
var timestamp = DateTime.Now.ToString("dd_MM_yyyy HH_mm");
var reportFileName = $"Report_{timestamp}.csv";
var reportPath = Path.Combine(in_Config["ReportOutputPath"].ToString(), reportFileName);

// Create directory if it doesn't exist
var directory = Path.GetDirectoryName(reportPath);
if (!Directory.Exists(directory))
{
    Directory.CreateDirectory(directory);
}

// Initialize CSV with headers using UTF-8 encoding with BOM for Polish characters
var csvHeaders = "Nr Referencyjny;Rozpoczęto przetwarzanie;Zakończono przetwarzanie;Czas przetwarzania [s];Wynik;Typ wyjątku;Komunikat wyjątku";

using (var writer = new StreamWriter(reportPath, false, Encoding.UTF8))
{
    writer.WriteLine(csvHeaders);
}

out_ReportPath = reportPath;
]]>
      </ui:InvokeCode.Code>
